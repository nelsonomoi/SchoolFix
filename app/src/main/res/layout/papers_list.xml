<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:padding="6dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/colorWhite"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/paper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:text="Paper One"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_to_take_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:text="Time"
            android:fontFamily="@font/roboto_light"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/paper_name" />

        <TextView
            android:id="@+id/time_to_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            android:text="2"
            android:fontFamily="@font/roboto_light"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/time_to_take_label"
            app:layout_constraintStart_toEndOf="@+id/time_to_take_label"
            app:layout_constraintTop_toTopOf="@+id/time_to_take_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/timeunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="hrs"
            android:fontFamily="@font/roboto_light"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/time_to_take"
            app:layout_constraintStart_toEndOf="@+id/time_to_take"
            app:layout_constraintTop_toTopOf="@+id/time_to_take" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>